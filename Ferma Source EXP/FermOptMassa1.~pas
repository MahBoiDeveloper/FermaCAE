end;

procedure TFerm_opt_massa.RadioButton1Click(Sender: TObject);
var
i,j:integer;
begin
  j:=0;// поиск номера
  for i:=1 to strtoint(edit9.Text) do
  begin
   if ferma5_kol_uzlov_m1[i]=strtoint(ComboBox1.Text) then
    begin
    j:=i;
    end;
  end;
  // теперь j - номер нужного элемента
