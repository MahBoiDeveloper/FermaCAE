  begin
   Temp:=tMouseX1;
   tMouseX1:=tMouseX2;
   tMouseX2:=Temp;
  end;
 if tMouseY2<tMouseY1 then
  begin
   Temp:=tMouseY1;
   tMouseY1:=tMouseY2;
   tMouseY2:=Temp;
  end;
 if (tMouseX1<>tMouseX2) or (tMouseY1<>tMouseY2) then tSelectionIsOK:=True
